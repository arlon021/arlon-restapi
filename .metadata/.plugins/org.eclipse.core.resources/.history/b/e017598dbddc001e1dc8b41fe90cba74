package br.com.arlon.utils;

public class NumberConverterUtils {
	
	public Double converterDouble(String number) {
		if(number == null) {
			return 0D;
		} else if(isNumeric(number)) {
			String str = number.replaceAll(",", ".");
			return Double.parseDouble(str);
		} else {
			return 0.0;		
		}
	}

	public boolean isNumeric(String number) {
		if(number == null) {
			return false;
		}
		String str = number.replaceAll(",", ".");
		return str.matches("[+-]?[0-9]*\\.?[0-9]+");
	}


}
